{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": null,
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/send-email.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/stripe/create-checkout.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/stripe/create-payment-intent.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/stripe/webhook.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
